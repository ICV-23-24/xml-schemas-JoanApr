<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  
  <xs:element name="telefono">
    <xs:simpleType>
    
      <xs:restriction base="xs:string">
       
        <xs:pattern value="\+\d[0,9]{2} \d[1,15]
        {9}" />
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

</xs:schema>
